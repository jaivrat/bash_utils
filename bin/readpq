#!/usr/bin/env python3
import sys
import pyarrow.parquet as pq

if len(sys.argv) != 2:
    print(f"Usage: {sys.argv[0]} file.parquet", file=sys.stderr)
    sys.exit(1)

first = True
for batch in pq.ParquetFile(sys.argv[1]).iter_batches():
    df = batch.to_pandas()  # no index param here
    df.to_csv(sys.stdout, index=False, header=first)
    first = False

